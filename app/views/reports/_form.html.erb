<%= simple_form_for @report do |f| %>

  <%= render "shared/error_messages", object: @report %>

  <div class="form-group">
    <%= f.input :progess_id, collection: @progesses,
      value_method: :id, include_blank: false %>
  </div>

  <div class="form-group">
    <%= f.label :duration %>
    <%= f.select :duration,
      options_for_select(@durations.collect {|k, v| [t("reports.duration.#{k}"), k]},
      @report.duration), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :report_date, as: :date_picker %>
  </div>

  <div class="form-group">
    <%= f.input :achievement, class: "btn-primary" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: "btn-primary" %>
  </div>

<% end %>
