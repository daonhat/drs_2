<h1><%= t "mailer.reports.title" %></h1>
<h1 class="text-center"><%= t "reports.all" %></h1>
<div class="panel-body">
  <div>
    <table class="table">
      <thead>
        <th>#</th>
        <th><%= t "reports.progess" %></th>
        <th><%= t "reports.duration" %></th>
        <th><%= t "reports.date" %></th>
        <th><%= t "reports.achievement" %></th>
      </thead>
      <tbody>
        <% @reports.each_with_index do |report, index| %>
          <tr>
            <td><%= index + 1 %>
            </td>
            <td><%= report.progess.name %></td>
            <td><%= t "reports.duration.#{report.duration}" %></td>
            <td><%= report.report_date.strftime t(:time_type) %></td>
            <td><%= report.achievement %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
