<h2><%= t :new_request %></h2>
<div class="col-md-6 col-md-offset-2">
  <%= simple_form_for @request do |f| %>

    <div class="form-group">
      <%= f.label :request_type %>
      <%= f.select :request_type,
        options_for_select(request_types.collect{|k, v| [k, k]},
        @request.request_type), {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :leave_from, as: :datetime_picker %>
    </div>

    <div class="form-group">
      <%= f.input :leave_to, as: :datetime_picker %>
    </div>

    <div class="form-group">
      <%= f.input :reason %>
    </div>

    <div class="form-group">
      <%= f.input :compensation_time_from, as: :datetime_picker %>
    </div>

    <div class="form-group">
      <%= f.input :compensation_time_to, as: :datetime_picker %>
    </div>

    <div class="form-group">
      <%= f.button :submit, class: "btn-primary" %>
    </div>

  <% end %>
</div>
