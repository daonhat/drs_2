<% if current_user.manager? %>
  <% unless request.approved? %>
    <%= form_for request do |f| %>
      <%= f.hidden_field :status, value: "approved" %>
      <%= f.submit t(:approved), class: "btn btn-success",
        data: {confirm: t("request.sure_approve", user: request.user.profile.name)} %>
    <% end %>
  <% end %>

  <%= form_for request, remote: true,
    html: {class: "dn-form-not_approve-#{request.id} "} do |f| %>
    <%= f.hidden_field :status, value: "not_approve" %>
    <%= f.submit t(:not_approve), class: "btn btn-danger",
      data: {confirm: t("request.sure_not_approve",
      user: request.user.profile.name)} %>
  <% end %>
<% else %>
  <%= request.approved? ? t(:approved) : t(:waiting) %>
<% end %>
