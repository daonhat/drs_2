<table class="table">
  <thead>
    <th>#</th>
    <th><%= t "position.name" %></th>
    <th><%= t "position.created_at" %></th>
    <th><%= t "position.update_at" %></th>
    <th class="action"><%= t :action %></th>
  </thead>
  <tbody>
    <% @positions.each_with_index do |position, index| %>
      <tr>
        <td><%= index + 1 + 
          (params[:page].nil? ? 0 : (params[:page].to_i - 1)*Settings.page_size) %>
        </td>
        <td><%= position.name %></td>
        <td><%= position.created_at.strftime t(:time_type) %></td>
        <td><%= position.updated_at.strftime t(:time_type) %></td>
        <td class="dn-action-padding">
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
