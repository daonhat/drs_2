<% provide :title, @division.name %>
<div id="error_mesages"></div>
<%= render "show_name_division" %>
<hr/>
<%= search_form_for @search, url: admin_division_path(@division),
  method: :get do |f| %>
  <div class="field">
    <%= f.text_field :name_cont, class: "form-control",
      placeholder: t(:search_name) %>
  </div>
  <div class="actions"><%= f.submit t(:search) %></div>
<% end %>

<div class="panel-body">
  <table class="table">
    <thead>
      <th><%= t "user.avatar" %></th>
      <th><%= sort_link @search, :name, t("user.name") %></th>
      <th><%= t "user.position" %></th>
      <th><%= t "user.division" %></th>
      <th><%= t "user.created_at" %></th>
      <th><%= t "user.update_at" %></th>
      <th class="action"><%= t :action %></th>
    </thead>
    <tbody>
      <%= render @profiles %>
    </tbody>
  </table>
</div>
<%= paginate @profiles %>
