<table class="table">
  <thead>
    <th>#</th>
    <th><%= t "division.name" %></th>
    <th><%= t "division.created_at" %></th>
    <th><%= t "division.update_at" %></th>
    <th class="action"><%= t :action %></th>
  </thead>
  <tbody>
    <% @divisions.each_with_index do |division, index| %>
      <tr>
        <td><%= index + 1 + 
          (params[:page].nil? ? 0 : (params[:page].to_i - 1)*Settings.page_size) %>
        </td>
        <td id="name-field-<%= division.id %>">
          <%= render "division_edit_form", division: division %>
        </td>
        <td><%= division.created_at.strftime t(:time_type) %></td>
        <td><%= division.updated_at.strftime t(:time_type) %></td>
        <td class="dn-action-padding">
          <%= link_to t(:edit), edit_admin_division_path(division),
            remote: true, class: "btn btn-primary" %>
          <%= link_to t(:delete), [:admin, division], method: :delete,
            data: {confirm: t(:sure)}, remote: true, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
