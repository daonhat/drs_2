<table class="table">
  <thead>
    <th>#</th>
    <th><%= t "progess.name" %></th>
    <th><%= t "progess.created_at" %></th>
    <th><%= t "progess.update_at" %></th>
    <th class="action"><%= t :action %></th>
  </thead>
  <tbody>
    <% @progesses.each_with_index do |progess, index| %>
      <tr>
        <td><%= index + 1 +
          (params[:page] ? (params[:page].to_i - 1)*Settings.page_size : 0) %>
        </td>
        <td id="name-field-<%= progess.id %>">
          <%= render "progess_edit_form", progess: progess %>
        </td>
        <td><%= progess.created_at.strftime t(:time_type) %></td>
        <td><%= progess.updated_at.strftime t(:time_type) %></td>
        <td class="dn-action-padding">
          <%= link_to t(:edit), edit_admin_progess_path(progess),
            remote: true, class: "btn btn-primary" %>
          <%= link_to t(:delete), [:admin, progess], method: :delete,
            data: {confirm: t(:sure)}, remote: true, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
